# Server
PORT=3000

# Supabase (server)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Supabase Postgres)
# Prefer the transaction pooler URL (port 6543) for DATABASE_URL in production
DATABASE_URL=postgresql://postgres.YOUR_REF:YOUR_PASSWORD@aws-1-REGION.pooler.supabase.com:6543/postgres?sslmode=require&pgbouncer=true&connection_limit=1&pool_timeout=30
DIRECT_URL=postgresql://postgres.YOUR_REF:YOUR_PASSWORD@db.YOUR_REF.supabase.co:5432/postgres?sslmode=require

# APIs
GROQ_API_KEY=your-groq-api-key
FAL_API_KEY=your-fal-api-key

# Redis / Queue (optional)
UPSTASH_REDIS_URL=
DISABLE_QUEUE=true
# IMAGE_QUEUE_DISABLED=true

# Optional webhook base for Fal callbacks
WEBHOOK_BASE_URL=http://localhost:3000

# Seeding (optional)
SEED_USER_ID=
# SEED_PROJECT_ID=

# Buckets (if referenced by server or for consistency with client)
NEXT_PUBLIC_SUPABASE_CHAR_BUCKET=character-images
NEXT_PUBLIC_SUPABASE_WORLD_BUCKET=world-images
# NEXT_PUBLIC_SUPABASE_IMAGE_BUCKET=images
# NEXT_PUBLIC_SUPABASE_BUCKET=images
